#!/usr/bin/env bash
set -eo pipefail

echo "-----> Running post-compile script"

# Ensure the cache directory exists
mkdir -p $HOME/.cache/ms-playwright

# Set the browser path
export PLAYWRIGHT_BROWSERS_PATH=$HOME/.cache/ms-playwright

echo "-----> Installing Playwright browsers"
playwright install

echo "-----> Setting permissions for Playwright cache"
chmod -R 777 $HOME/.cache/ms-playwright

echo "-----> Cleaning up .apt directory"
rm -rf /tmp/tmp.*/.apt /tmp/build_*/.apt

echo "-----> Post-compile script completed"